<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mtb="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <com.sha.kamel.multitogglebutton.MultiToggleButton
        android:id="@+id/mtb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        mtb:labels="@array/yes_no_array"
        mtb:mtbCornerRadius="40dp"
        android:layout_gravity="center"
        />

    <com.sha.kamel.multitogglebutton.MultiToggleButton
        android:id="@+id/mtb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        mtb:labels="@array/yes_no_array"
        mtb:mtbTextAllCaps="false"
        android:layout_gravity="center"
        />

    <com.sha.kamel.multitogglebutton.MultiToggleButton
        android:id="@+id/mtb3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        mtb:labels="@array/planets_array"
        mtb:mtbRoundedCorners="true"
        />

    <com.sha.kamel.multitogglebutton.MultiToggleButton
        android:id="@+id/mtb4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        mtb:labels="@array/dogs_array"
        mtb:mtbScrollable="true"
        mtb:mtbRoundedCorners="true"
        mtb:mtbPressedColor="@color/orange_pressed"
        mtb:mtbUnpressedColor="@color/orange"
        mtb:mtbColorPressedText="@color/white"
        mtb:mtbColorUnpressedText="@color/white"
        />

    <com.sha.kamel.multitogglebutton.MultiToggleButton
        android:id="@+id/mtb5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        mtb:mtbPressedColor="@color/button_primary_color"
        mtb:mtbUnpressedColor="@color/mtb_gray"
        mtb:mtbScrollable="true"
        mtb:mtbRoundedCorners="false"
        mtb:mtbMultipleChoice="true"
        />

</LinearLayout>
